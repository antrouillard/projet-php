{% extends 'base.html.twig' %}

{% block title %}Liste des tournois WIP{% endblock %}

{% block body %}
    <h1>Liste des tournois WIP</h1>

    <h2>Nombre de tournois - {{ tournaments|length }}</h2>

    <a href="/tournament/tnew">Cr√©ez un nouveau tournoi</a>

    <div>
        {% for tournament in tournaments %}
            {% if loop.first %}
                <ul>
            {% endif %}
            <li>
                <a href="/tournament/{{ tournament.id }}">{{ tournament.id }} - {{ tournament.name }}</a>
                <a href="/tournament/{{ tournament.id }}/tedit">Edit</a>
                <a href="/tournament/{{ tournament.id }}/tdelete">Delete</a>
            </li>
            {% if loop.last %}
                </ul>
            {% endif %}
        {% else %}
            <b>There are no tournaments</b>
        {% endfor %}
    </div>
{% endblock %}
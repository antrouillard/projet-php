            <form method="post">
                {% if violations != null %}
                    <div class="alert alert-danger">
                    {% for violation in violations %}
                        {{ violation }}<br>
                    {% endfor %}
                    </div>
                {% endif %}
                <label for="email">Votre adresse e-mail :</label>
                <input type="email" id="email" name="email" required>
                <button type="submit">S'inscrire</button>
            </form>